<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    style="@style/base_match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        style="@style/layout_match_parent_20">
        <LinearLayout
            android:id="@+id/LinearLayouttext"
            style="@style/ll_match_center_v"
            android:visibility="gone">
            <EditText
                android:id="@+id/errorstring"
                style="@style/edittext_errorstring">
                </EditText>
                </LinearLayout>
                <TextView
                    style="@style/Text_title"
                    android:layout_marginTop="15dp"
                    android:text="金山词霸单词查询"/>
                <LinearLayout style="@style/ll_wrap_center_h">
                    <EditText
                        android:id="@+id/WordNameselselect"
                        style="@style/edittext_80_40"
                        android:hint="请输入需要查询的单词">
                        <requestFocus/>
                        </EditText>
                        <Button
                            android:id="@+id/kingsoftselectquerry"
                            android:layout_width="30dp"
                            style="@style/button_nowidth"
                            android:text="查询"/>
                         <Button
                            android:id="@+id/kingsoftmessage"
                            android:layout_width="80dp"
                            style="@style/button_nowidth"
                            android:text="显示提醒信息"/>
                          <Button
                            android:id="@+id/kingsoftcancel"
                            android:layout_width="30dp"
                            style="@style/button_nowidth"
                            android:text="返回"/>
    </LinearLayout>
    <LinearLayout style="@style/ll_match_wrap_v">
        <TextView
            android:id="@+id/TextViewWordName"
            style="@style/textview_kingsoft"
            android:text="单词"/>
        <TextView
            android:id="@+id/TextViewPhonogramA"
            style="@style/textview_kingsoft"
            android:text="音标（英）"/>
        <TextView
            android:id="@+id/TextViewPhonogramE"
            style="@style/textview_kingsoft"
            android:text="音标（美）"/>
        <TextView
            android:id="@+id/TextViewWordMeaning"
            style="@style/textview_kingsoft"
            android:text="解释"/>
        <TextView
            android:id="@+id/TextViewPronunciationE"
            style="@style/textview_kingsoft"
            android:text="读音（英）"/>
        <TextView
            android:id="@+id/TextViewPronunciationA"
            style="@style/textview_kingsoft"
            android:text="读音（美）"/>
        <TextView
            android:id="@+id/TextViewExampleSentence"
            style="@style/textview_kingsoft"
            android:text="例句"/>
        <TextView
            android:id="@+id/TextViewSentenceMeaning"
            style="@style/textview_kingsoft"
            android:text="例句解释"/>
        </LinearLayout>
        </LinearLayout>
</ScrollView>
