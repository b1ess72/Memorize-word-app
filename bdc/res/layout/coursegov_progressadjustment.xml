            android:id="@+id/spatWordPhonogram"
            style="@style/Text_title_wel"
            android:text="xxx用户欢迎您"/>
        <TextView
            android:id="@+id/spatCoursetitle"
            style="@style/textview_wrap_1"
            android:text="课程名："/>
        <LinearLayout style="@style/ll_wrap_top_h">
        <TextView
            android:id="@+id/spattotalnumberofwords"
            style="@style/textview_wrap_1"
            android:text="总单词数："/>
        <EditText
            android:id="@+id/alleditText"
            android:layout_width="50dp" 
            style="@style/edittext_base_heightwrap">
