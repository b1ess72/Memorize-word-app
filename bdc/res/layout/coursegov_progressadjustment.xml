            <LinearLayout style="@style/ll_wrap_top_h">
            <TextView
            android:id="@+id/spatunlearned"
            style="@style/textview_wrap_1"
            android:text="未学习单词"/>
            <EditText
                android:id="@+id/resteditText"
                android:layout_width="50dp"
                style="@style/edittext_base_heightwrap">
                </EditText>
            <TextView
            android:id="@+id/spatunlearnedz"
            style="@style/textview_wrap_1"
            android:text="组"/>
            </LinearLayout>
            <Button
                android:id="@+id/spatPreview"
                style="@style/button_match_parent"
                android:layout_marginTop="10dp"
                android:text="预览分组信息"/>
             <Button
                android:id="@+id/spatPreservation"
                style="@style/button_match_parent"
                android:layout_marginTop="10dp"
                android:text="保存分组信息"/>
             <Button
                android:id="@+id/spatcancle"
                style="@style/button_match_parent"
                android:layout_marginTop="10dp"
