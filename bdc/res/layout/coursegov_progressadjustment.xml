                 android:id="@+id/Courseandgroup"
                 style="@style/textview_wrap_1"
                 android:text="第...组，每组xx单词"/>
            <TextView
                 android:id="@+id/Eachcourseandgroup"
                 style="@style/textview_wrap_1"
                 android:text="第xx组，每组xx单词"/>
             <TextView
                 android:id="@+id/TextView06"
                 style="@style/textview_wrap_1"
                 android:text="重新分组后的情况："/>
             <TextView
                 android:id="@+id/Pregroup"
                 style="@style/textview_wrap_1"
                 android:text="前xx组，每组xx单词"/>
              <TextView
                 android:id="@+id/Postgroup"
                 style="@style/textview_wrap_1"
                 android:text="最后xx组，拥有xx单词"/>
