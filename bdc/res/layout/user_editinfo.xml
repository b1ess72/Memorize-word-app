<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_match_parent">
    <LinearLayout
        style="@style/layout_match_parent_20"
        android:id="@+id/inputother">
        <TextView
            android:text="修改个人资料"
            style="@style/Text_title" />
        <EditText
            android:id="@+id/edit_question"
            style="@style/edittext_match_40"
            android:hint="请设置密保问题"/>
        <requestFocus/>
        <EditText
            android:id="@+id/edit_answer"
            style="@style/edittext_match_40"
            android:hint="请设置密保答案"/>
        <EditText
            android:id="@+id/edit_student"
            style="@style/edittext_match_40"
            android:hint="学号"/>
        <EditText
            android:id="@+id/edit_name"
            style="@style/edittext_match_40"
            android:hint="姓名"/>
        <EditText
            android:id="@+id/edit_identity"
            style="@style/edittext_match_40"
            android:hint="身份证号" />
        <EditText
            android:id="@+id/edit_phone"
            style="@style/edittext_match_40"
            android:hint="手机号" />
        <EditText
            android:id="@+id/edit_email"
            style="@style/edittext_match_40"
            android:hint="邮箱" />
        <LinearLayout
            style="@style/ll_wrap_top_h">
            <EditText
                android:id="@+id/edit_Yz"
                style="@style/edittext_80_40" />
            <ImageView
                android:id="@+id/vc_image"
                style="@style/imageview_captchacode"
                android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_01"
                style="@style/Text_title_warning" />
            <Button
                android:id="@+id/submit"
                style="@style/button_match_parent"
                android:text="提    交" />
            <Button
                android:id="@+id/pre"
                style="@style/button_match_parent"
                android:text="返    回" />
            </LinearLayout>
            </ScrollView>
    


