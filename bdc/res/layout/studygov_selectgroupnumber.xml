<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    style="@style/layout_match_parent_20">
    <TextView
        android:id="@+id/textView11"
        style="@style/Text_title"
        android:layout_marginTop="20dp"
        android:text="请选择分组号"/>
    <TextView
        android:id="@+id/sWordPhonogram"
        style="@style/Text_title_wel"
        android:text="xxx用户欢迎您"/>
    <LinearLayout style="@style/ll_match_wrap_v">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/scoursename"
                style="@style/textview_wrap_1"
                android:layout_marginTop="20dp"
                android:text="课程名:"/>
            </LinearLayout>
            <LinearLayout style="@style/ll_wrap_center_h">
                <TextView
                    android:id="@+id/textView2"
                    style="@style/textview_wrap_1"
                    android:layout_marginTop="15dp"
                    android:text="组号："/>
                <Spinner
                    android:id="@+id/seditSetNo"
                    style="@style/spinner"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayoutfamiliarity"
                    style="@style/ll_wrap_center_h">
                <TextView
                    android:id="@+id/textView3"
                    style="@style/textview_wrap_1"
                    android:layout_marginTop="15dp"
                    android:text="熟悉程度："/>
                <Spinner
                    android:id="@+id/spinnerfamiliarity"
                    style="@style/spinner"/>
                </LinearLayout>
                <Button
                    android:id="@+id/sconfirm"
                    style="@style/button_match_parent"
                    android:text="确定"/>
                <Button
                    android:id="@+id/scancle"
                    style="@style/button_match_parent"
                    android:text="返 回"/>
                </LinearLayout>
</LinearLayout>
